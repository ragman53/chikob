---
import Layout from "../layouts/Layout.astro";
import LogoParticles from "../components/LogoParticles.astro";
import Marquee from "../components/Marquee.astro";
import logoSrc from "../assets/footwork-picnic-logo.svg";
---

<Layout title="CHIKOB" pageTitle="CHIKOB">
	<div class="hero-section">
		<LogoParticles src={logoSrc.src} alt="Interactice Logo" />
	</div>
	<Marquee
	text="All returns to nothing ｜ すべては無へ還る ｜ All returns to nothing ｜ すべては無へ還る ｜"
	href="https://koolswitchworks.bandcamp.com/track/fumbling-tumbling"
	/>
</Layout>

<style>
	.hero-section {
		width: 100%;
		/* Set a specific height based on the dynamic viewport height, 
		   leaving space for the nav and marquee. */
		height: calc(100dvh - 10rem); /* 100% of screen height minus ~12rem for header/footer */
		/* Centering styles are still important */
		display: flex;
		justify-content: center;
		align-items: center;
	}
</style>