---
import Layout from "../layouts/Layout.astro";
import LogoParticles from "../components/LogoParticles.astro";
import Marquee from "../components/Marquee.astro";
import logoSrc from "../assets/footwork-picnic-logo.svg";
---

<Layout title="CHIKOB" pageTitle="CHIKOB">
	<div class="hero-section">
      <LogoParticles src={logoSrc.src} alt="Interactice Logo" />
    </div>
	<Marquee
    text="NEW POST: The Supermarket as Sponge: Forging a Porous Sphere of Affection through Contaminated Ethics"
    href="/idea/niku-no-hanamasa"
	/>
</Layout>

<style>
	:global(main.content-area) {
		padding: 0;
		align-items: center;
	}
	.hero-section {
		display: flex;
		justify-content: center;
		align-items: center;
		width: 100%;
		flex-grow: 1;
		overflow: hidden;
	}
</style>