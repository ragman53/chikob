---
// src/pages/idea.astro
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('idea')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf() );
---
<Layout title="IDEA" pageTitle="IDEA">
	<section class="post-list-container">
		{posts.map((post) => (
			<details class="post-item">
				<summary class="post-summary">
					<span class="post-title" lang={post.data.lang || 'en'}>{post.data.title}</span>
					<time datetime={post.data.pubDate.toISOString()}>
						{post.data.pubDate.toLocaleDateString(post.data.lang === 'ja' ? 'ja-JP' : 'en-US', {
							year: 'numeric',
							month: 'long',
							day: 'numeric'
						})}
					</time>
				</summary>
				<div class="post-description">
					<p lang={post.data.lang || 'en'}>{post.data.description}</p>
					<a href={`/idea/${post.slug}`}>Read full article...</a>
				</div>
			</details>
		))}
	</section>
</Layout>

<style>
	.post-list-container {
		width: 100%;
		border-top: 1px solid var(--border-color);
	}
	.post-item {
		border-bottom: 1px solid var(--border-color);
		border-left: 1px solid var(--border-color);
		border-right: 1px solid var(--border-color);
	}
	.post-summary {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem 0.5rem;
		cursor: pointer;
		list-style: none;
		font-size: clamp(0.5rem, 2vw, 1rem);
	}
	/* English titles use Boldonse */
	.post-title:lang(en) {
		font-family: var(--font-family-heading);
	}
	/* Japanese titles use Japanese serif */
	.post-title:lang(ja) {
		font-family: var(--font-family-jp-heading);
	}
	.post-summary::-webkit-details-marker {
		display: none;
	}
	.post-description {
		padding: 0.5rem 1rem 1rem;
	}
	.post-description a {
		color: var(--color-foreground);
		text-decoration: underline;
		font-weight: bold;
	}
	.post-description p:lang(ja) {
		font-family: var(--font-family-jp-main);
	}
</style>