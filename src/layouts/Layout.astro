---
// File: src/layouts/Layout.astro (The definitive version)
import { ClientRouter } from "astro:transitions";
import Navigation from "../components/Navigation.astro";

interface Props {
  title: string;
  pageTitle: string;
}
const { title, pageTitle } = Astro.props;
const themeClass = `theme-${pageTitle.toLowerCase()}`;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

    <ClientRouter />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Boldonse&family=Dela+Gothic+One&family=Noto+Serif+JP:wght@200..900&family=Vollkorn:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
  </head>
  <body class={themeClass}>
    <div class="page-wrapper">
      <header class="site-header">
        <Navigation pageTitle={pageTitle} />
      </header>

      <main class="content-area">
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  /* --- Global Styles & Variables --- */
  :root {
    --color-background: #cccccc;
    --color-foreground: #a32727;
    --border-color: #3B060A;
    --font-family-main: 'Vollkorn', 'Times New Roman', serif;
    --font-family-heading: 'Boldonse', 'Georgia', serif;
    --font-family-jp-main: 'Noto Serif JP', 'Hiragino Kaku Gothic ProN', 'Meiryo', 'Yu Gothic', sans-serif;
    --font-family-jp-heading: 'Dela Gothic One', 'Hiragino Mincho ProN', 'Yu Mincho', serif;
  }
  /* ---Define other themes by overriding CSS variables for each menu page ---*/
  .theme-idea {
    --color-background: #FAFFC5;
    --color-foreground: #3A3960;
    --border-color: #5E686D;
  }
  .theme-craft {
    --color-background: #FFF287;
    --color-foreground: #3B060A;
    --border-color: #8A0000;
  }
  .theme-code {
    --color-background: #6adb64;
    --color-foreground: #000000;
    --border-color: #000000;
  }
  .theme-who {
    --color-background: #D3ECA7;
    --color-foreground: #19282F;
    --border-color: #B33030;
  }
  body,
  html {
    margin: 0;
    padding: 0;
    background-color: var(--color-background);
    color: var(--color-foreground);
    font-family: var(--font-family-main);
    font-size: 22px; 
    transition: background-color 1s linear;
  }

  /* --- Language-Specific Typography --- */
  /* Japanese content styling */
  :lang(ja) {
    font-family: var(--font-family-jp-main);
    line-height: 1.9;
    letter-spacing: 0.02em;
    
    /* Glyph spacing (proportional metrics) */
    font-feature-settings: 'palt' 1; 
    
    /* Kinsoku handling (line-break rules for Japanese) */
    line-break: strict;  
    
    /* IMPORTANT: adjust this as needed */
    overflow-wrap: break-word; /* Only wrap when a word is too long */
    word-break: break-all;     /* Prefer Japanese line breaks while preventing overflow */
}

  /* English content styling */
  :lang(en) {
    font-family: var(--font-family-main);
    line-height: 1.6;
    hyphens: auto;
    word-break: normal;
    overflow-wrap: anywhere;
  }

  /* Inline Japanese inside English paragraphs */
  :lang(en) [lang="ja"],
  :lang(en) span[lang="ja"],
  :lang(en) em[lang="ja"] {
    font-family: var(--font-family-jp-main);
    font-style: normal;
    letter-spacing: 0.02em;
  }

  /* Inline English inside Japanese paragraphs */
  :lang(ja) [lang="en"],
  :lang(ja) span[lang="en"],
  :lang(ja) em[lang="en"] {
    font-family: var(--font-family-main);
    font-style: italic;
  }

  /* --- Animation Definitions --- */

  /* 1. Page Title Animations */
  @keyframes title-slide-out {
    from {
      transform: translateX(0);
      opacity: 1;
    }
    to {
      transform: translateX(2000px);
      opacity: 1;
    }
  }
  @keyframes title-slide-in {
    from {
      transform: translateX(-2000px);
      opacity: 1;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  /* 2. Menu Carousel Animations */
  @keyframes carousel-slide-out {
    from {
      transform: translateX(0);
      opacity: 1;
    }
    to {
      transform: translateX(-100%);
      opacity: 0;
    }
  }
  @keyframes carousel-slide-in {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }
  @keyframes page-flip-out {
    from { transform: rotateY(0deg); }
    to { transform: rotateY(-90deg); }
  }
  @keyframes page-flip-in { 
    from { transform: rotateY(90deg); }
    to { transform: rotateY(0deg); }
  }

  /* --- View Transition Rules --- */

  /* Apply the animations to the named elements from Navigation.astro */
  ::view-transition-old(page-title) {
    animation: 800ms title-slide-out ease-in forwards;
  }
  ::view-transition-new(page-title) {
    animation: 800ms title-slide-in ease-out 150ms forwards;
  }
  ::view-transition-old(menu-list) {
    animation: 800ms carousel-slide-out ease-in forwards;
  }
  ::view-transition-new(menu-list) {
    animation: 800ms carousel-slide-in ease-out 150ms forwards;
  }
  ::view-transition-group(root) {
    transform-style: preserve-3d;
  }
  ::view-transition-old(root) {
    animation: 800ms page-flip-out ease-in forwards;
    transform-origin: left center;
    backface-visibility: hidden;
  }
  ::view-transition-new(root) {
    animation: 800ms page-flip-in ease-out forwards;
    transform-origin: right center;
    backface-visibility: hidden;
  }
  /* --- Layout Styles --- */
  .page-wrapper {
    display: flex;
    flex-direction: column;
    width: 100%;
    min-height: 100dvh;
    box-sizing: border-box;
  }
  /* On the homepage, make the content area a flex container as well */
  body.is-homepage .content-area {
    flex-grow: 1; /* Make the main content area fill the remaining space */
    display: flex;
    flex-direction: column;
  }
  .site-header {
    position: sticky;
    top: 0;
    z-index: 10;
    width: 100%;
    background-color: var(--color-background);
    
  }
  .content-area {
    width: 100%;
    /*max-width: 1200px;*/
    margin: 0 auto;
    padding-top: 1rem;
    box-sizing: border-box;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  /* On the homepage, remove padding to allow full-width content */
  body.is-homepage .content-area {
    max-width: 100%;
    padding: 0;
    justify-content: center;
    align-items: center;
  }
</style>